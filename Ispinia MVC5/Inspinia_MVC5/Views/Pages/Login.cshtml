@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">AR+</h1>

            </div>
            <h3>Benvenuti a tutti</h3>
            <p>
                Accedendo potrete utilizzare il mio blog e visualizzare la mia Photo-Gallery.
            </p>
            <form class="m-t" role="form" action="#">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Username" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Accedi</button>

                <a href="#"><small>Password dimenticata?</small></a>
                <p class="text-muted text-center"><small>Non sei ancora registrato?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Pages")">Crea il tuo account</a>
            </form>
             </div>
    </div>

</body>

</html>


